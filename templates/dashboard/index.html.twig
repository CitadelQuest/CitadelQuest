                <div class="bg-cyber-g p-3 rounded-top border-success border-1 border-bottom">
                    <h5 class="mb-0">
                        <i class="mdi mdi-lightning-bolt me-2"></i>{{ 'dashboard.quick_actions'|trans }}
                    </h5>
                </div>
                <div class="p-4">
                    <div class="row g-3">
                        <!-- Spirit Chat -->
                        <div class="col-12 col-md-6 col-lg-4">
                            <a href="{{ path('spirit_index') }}" class="text-decoration-none">
                                <div class="card glass-panel h-100 glass-panel-glow">
                                    <div class="card-body text-center">
                                        <div class="mb-2 py-3 d-flex justify-content-center align-items-center">
                                            {{ include('components/_spirit_icon.html.twig') }}
                                        </div>
                                        <h6 class="text-light">{{ 'spirit.title'|trans }} <span class="spiritName fw-bold"></span></h6>
                                        {# <small class="text-muted w-100 d-inline-block">{{ 'dashboard.spirit_description'|trans }}</small> #}
                                        <a class="small" href="{{ path('spirit_index') }}">
                                            {{ 'spirit.menu.settings'|trans }}
                                        </a>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!-- CQ Contacts -->
                        <div class="col-12 col-md-6 col-lg-4">
                            <a href="{{ path('app_cq_contact_index') }}" class="text-decoration-none">
                                <div class="card glass-panel h-100 glass-panel-glow position-relative">
                                    <div class="card-body text-center">
                                        <i class="mdi mdi-account-group fs-1 text-primary mb-2"></i>
                                        <h6 class="text-light">{{ 'cq_contact.page_title'|trans }}</h6>
                                        <small class="text-muted">{{ 'dashboard.contacts_description'|trans }}</small>
                                        <!-- Friend Request Badge -->
                                        <span class="position-absolute top-0 end-0 m-2 badge rounded-pill bg-danger d-none" 
                                              id="friend-request-badge" 
                                              style="font-size: 0.75rem;">
                                            0
                                        </span>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!-- File Browser -->
                        <div class="col-12 col-md-6 col-lg-4">
                            <a href="{{ path('app_file_browser') }}" class="text-decoration-none">
                                <div class="card glass-panel h-100 glass-panel-glow">
                                    <div class="card-body text-center">
                                        <i class="mdi mdi-file-star fs-1 text-warning mb-2"></i>
                                        <h6 class="text-light">{{ 'file_browser.page_title'|trans }}</h6>
                                        <small class="text-muted">{{ 'dashboard.files_description'|trans }}</small>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!-- Settings -->
                        <div class="col-12 col-md-6 col-lg-4">
                            <a href="{{ path('app_user_settings') }}" class="text-decoration-none">
                                <div class="card glass-panel h-100 glass-panel-glow">
                                    <div class="card-body text-center">
                                        <i class="mdi mdi-tune-vertical fs-1 text-secondary mb-2"></i>
                                        <h6 class="text-light">{{ 'navigation.user_menu.settings'|trans }}</h6>
                                        <small class="text-muted">{{ 'dashboard.settings_description'|trans }}</small>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!-- Backup -->
                        <div class="col-12 col-md-6 col-lg-4">
                            <a href="{{ path('app_backup_index') }}" class="text-decoration-none">
                                <div class="card glass-panel h-100 glass-panel-glow">
                                    <div class="card-body text-center">
                                        <i class="mdi mdi-backup-restore fs-1 text-success mb-2"></i>
                                        <h6 class="text-light">{{ 'navigation.user_menu.backup'|trans }}</h6>
                                        <small class="text-muted">{{ 'dashboard.backup_description'|trans }}</small>
                                    </div>
                                </div>
                            </a>
                        </div>

                        {% if is_granted('ROLE_ADMIN') %}
                        <!-- Admin Panel -->
                        <div class="col-12 col-md-6 col-lg-4">
                            <a href="{{ path('app_admin_dashboard') }}" class="text-decoration-none">
                                <div class="card glass-panel h-100 glass-panel-glow">
                                    <div class="card-body text-center">
                                        <i class="mdi mdi-account-cowboy-hat fs-1 text-light opacity-75 mb-2"></i>
                                        <h6 class="text-light">{{ 'navigation.user_menu.admin'|trans }}</h6>
                                        <small class="text-muted">{{ 'dashboard.admin_description'|trans }}</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- CQ AI Gateway -->
            <div class="glass-panel mb-4">
                <div class="bg-cyber-g p-3 rounded-top border-success border-1 border-bottom">
                    <div class="mb-0 d-flex align-items-center justify-content-between">
                        <span>
                            <i class="mdi mdi-server-network me-2"></i>CQ AI Gateway
                        </span>
                        <span class="d-flex align-items-center justify-content-end gap-2">
                            <i class="mdi fs-5 mdi-gauge{% if CQ_AI_GatewayCredits < 0 %}-empty text-danger{% elseif CQ_AI_GatewayCredits < 30 %}-low text-danger{% elseif CQ_AI_GatewayCredits < 60 %} text-warning{% elseif CQ_AI_GatewayCredits > 500 %}-full text-success{% else %} text-cyber{% endif %}"
                                title="{{ CQ_AI_GatewayCredits }} Credits"></i>
                        
                            <span class="badge {% if CQ_AI_GatewayCredits < 30 %}bg-danger{% elseif CQ_AI_GatewayCredits < 60 %}bg-warning{% elseif CQ_AI_GatewayCredits > 500 %}bg-success{% else %}bg-cyber{% endif %}">{{ CQ_AI_GatewayCredits }}</span>
                            <span class="small">Credits</span>
                        </span>
                    </div>
                </div>
                <div class="p-4 rounded-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <button type="button" onclick="openGatewayLogin('dashboard')" class="btn btn-sm btn-outline-secondary" id="gatewayLoginBtn">
                            <i class="mdi mdi-login me-2"></i> CQ AI Gateway - Dashboard
                        </button>
                        <button type="button" onclick="openGatewayLogin('add-credits')" class="btn btn-sm btn-cyber" id="addCreditsBtn">
                            <i class="mdi mdi-plus me-2"></i> {{ 'settings.ai.gateway.add_credits'|trans|default('Add Credits') }}
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-5 col-md-4 mb-4">            
            <!-- Storage Usage Section -->
            <div class="glass-panel mb-4">
                <div class="bg-cyber-g p-3 rounded-top border-success border-1 border-bottom">
                    <h5 class="mb-0">
                        <i class="mdi mdi-harddisk me-2"></i>{{ 'settings.storage.title'|trans }}
                    </h5>
                </div>
                <div class="p-4 bg-dark bg-opacity-10 rounded-bottom">
                    <div class="row g-2">
                        <!-- Total Storage -->
                        <div class="w-100 d-flex align-items-center justify-content-start">
                            <i class="mdi mdi-database fs-2 text-cyber"></i>
                            <div class="d-flex flex-column align-items-start ms-3">
                                <h5 class="text-cyber mb-1">{{ storageInfo.formatted }}</h5>
                                <small class="text-muted">{{ 'settings.storage.total'|trans }}</small>
                            </div>
                        </div>
                        
                        <!-- User Database -->
                        <div class="w-100 border-top border-opacity-25 border-secondary pt-2 d-flex align-items-center justify-content-start">
                            <i class="mdi mdi-database-outline fs-2 text-secondary"></i>
                            <div class="d-flex flex-column align-items-start ms-3">
                                <h5 class="mb-1">{{ storageInfo.database.formatted }}</h5>
                                <small class="text-muted">{{ 'settings.storage.database'|trans }}</small>
                            </div>
                        </div>
                        
                        <!-- User Data -->
                        <div class="w-100 border-top border-opacity-25 border-secondary pt-2 d-flex align-items-center justify-content-start">
                            <i class="mdi mdi-folder-multiple-outline fs-2 text-warning"></i>
                            <div class="d-flex flex-column align-items-start ms-3">
                                <h5 class="mb-1">{{ storageInfo.data.formatted }}</h5>
                                <small class="text-muted">{{ 'settings.storage.data'|trans }}</small>
                            </div>
                        </div>
                        
                        <!-- Backups -->
                        <div class="w-100 border-top border-opacity-25 border-secondary pt-2 d-flex align-items-center justify-content-start">
                            <i class="mdi mdi-backup-restore fs-2 text-success"></i>
                            <div class="d-flex flex-column align-items-start ms-3">
                                <h5 class="mb-1">{{ storageInfo.backups.formatted }}</h5>
                                <small class="text-muted">{{ 'settings.storage.backups'|trans }}</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- CitadelQuest About page `/` -->
            <div class="glass-panel glass-panel-glow">
                <div class="p-3 text-center bg-dark bg-cyber-g bg-opacity-25 rounded">
                    <img src="{{ asset('build/images/logo-sm.png') }}" alt="{{ "app.name"|trans }}" class="w-100">
                    <div class="small text-light mb-2">
                        <div title="Server"><i class="mdi mdi-server me-1"></i>{{ app.request.host }}</div>
                    </div>
                    <a href="{{ path('app_about') }}" class="btn btn-cyber btn-sm mt-2">{{ "app.name"|trans }}</a>
                    <div class="small text-light opacity-75">
                        <div class="mt-2" title="Version">{{ citadel_version }}</div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
