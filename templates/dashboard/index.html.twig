{% extends 'base.html.twig' %}

{% block title %}{{ 'dashboard.title'|trans }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('dashboard-badges') }}
    <script>
    /**
     * Open CQ AI Gateway with seamless login (no password required)
     * @param {string} redirect - Where to redirect after login: 'dashboard', 'add-credits', 'transactions'
     */
    function openGatewayLogin(redirect = 'dashboard') {
        // Show loading state on the clicked element
        const btn = event.target.closest('button, a');
        const originalContent = btn ? btn.innerHTML : null;
        if (btn) {
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>';
        }

        fetch('{{ path('app_user_settings_ai_gateway_login') }}', {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ redirect: redirect })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success && data.login_url) {
                // Open the login URL in a new window
                window.open(data.login_url, '_blank');
            } else {
                // Show error
                window.toast.error(data.message || 'Failed to connect to CQ AI Gateway');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            window.toast.error('Failed to connect to CQ AI Gateway');
        })
        .finally(() => {
            // Restore button state
            if (btn && originalContent) {
                btn.disabled = false;
                btn.innerHTML = originalContent;
            }
        });
    }
    </script>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row d-none">
        <div class="col-12">
            <div class="glass-panel mb-4">
                <div class="bg-cyber-g py-2 px-4 rounded-top border-success border-1 border-bottom">
                    <h5 class="mb-0">
                        <i class="mdi mdi-view-dashboard me-3"></i>{{ 'dashboard.welcome'|trans({'%username%': user.username}) }}
                    </h5>
                </div>
                <div class="py-2 px-4">
                    <p class="text-muted m-0">{{ 'dashboard.description'|trans }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-12 col-sm-7 col-md-8">
            {% if migrationInfo %}
