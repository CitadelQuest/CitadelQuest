            <div class="alert alert-info mb-4">
                <i class="mdi mdi-information me-2"></i>
                <strong>{{ 'settings.migration.already_migrated'|trans|default('This account has been migrated') }}</strong>
                <p class="mb-0 mt-2">
                    {{ 'settings.migration.migrated_to'|trans|default('Migrated to') }}: <code>{{ migrationInfo.migrated_to }}</code><br>
                    {{ 'settings.migration.migrated_at'|trans|default('Migrated on') }}: {{ migrationInfo.migrated_at|date('d/m/Y') }}
                </p>
            </div>
            {% endif %}

            <!-- Quick Actions Section -->
