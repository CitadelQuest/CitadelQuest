{% if app.user %}
<div class="modal fade" id="cqChatModal2" tabindex="-1" aria-labelledby="cqChatModal2Label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-fullscreen">
        <div class="modal-content glass-panel">
            <div class="modal-header bg-cyber-g border-success py-2">
                <h5 class="modal-title" id="cqChatModal2Label">
                    <i class="mdi mdi-chat me-2"></i>{{ 'cq_chat.page_title'|trans }}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'ui.close'|trans }}"></button>
            </div>
            <div class="modal-body p-0">
                <div class="row g-0 h-100">
                    <!-- Chat List Sidebar -->
                    <div class="col-md-4 border-end border-secondary border-opacity-25">
                        <div class="p-3 border-bottom border-secondary border-opacity-25">
                            <div class="input-group">
                                <span class="input-group-text glass-panel border-0">
                                    <i class="mdi mdi-magnify"></i>
                                </span>
                                <input type="text" id="chatSearch2" class="form-control glass-input border-0" 
                                       placeholder="{{ 'cq_chat.search_placeholder'|trans }}">
                            </div>
                        </div>
                        <div id="chatsList2" class="chat2-list-container">
                            <div class="text-center p-3">
                                <div class="spinner-border text-cyber" role="status">
                                    <span class="visually-hidden">{{ 'ui.loading'|trans }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Chat Messages Area -->
                    <div class="col-md-8 d-flex flex-column">
                        <!-- Chat Header -->
                        <div class="p-3 border-bottom border-secondary border-opacity-25">
                            <h6 id="currentChatTitle2" class="mb-0 text-cyber">
                                {# <i class="mdi mdi-chat-outline me-2"></i>{{ 'cq_chat.select_chat'|trans }} #}
                            </h6>
                        </div>
                        
                        <!-- Messages Container -->
                        <div id="chatMessages2" class="flex-grow-1 p-3 chat2-messages-container">
                            <div class="text-center p-5 text-muted">
                                <i class="mdi mdi-chat-outline fs-1 mb-3 d-block"></i>
                                {# <p>{{ 'cq_chat.select_chat_to_start'|trans }}</p> #}
                            </div>
                        </div>
                        
                        <!-- Message Input -->
                        <div class="p-3 border-top border-secondary border-opacity-25">
                            <form id="chatForm2" class="d-flex gap-2">
                                <textarea id="messageInput2" class="form-control glass-input" rows="2" 
                                          placeholder="{{ 'cq_chat.type_message'|trans }}" 
                                          style="resize: none;"></textarea>
                                <button type="submit" class="btn btn-cyber px-3">
                                    <i class="mdi mdi-send"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}
