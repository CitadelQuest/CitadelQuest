{% if app.user %}
<div class="modal fade" id="spiritChatModal" tabindex="-1" aria-labelledby="spiritChatModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-fullscreen">
        <div class="modal-content glass-panel">
            <div class="modal-header bg-cyber-g border-success">
                <span id="spiritChatModalTitle" class="fs-4 me-2"></span>
                <span class="modal-title fs-6 d-none d-md-inline-block" id="spiritChatModalLabel">{{ 'spirit.chat.title'|trans }} <span class="spiritName"></span></span>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-4 text-end pt-2">
                                <a href="/spirit" title=""><h5 class="spiritName mt-2">{{ 'spirit.loading'|trans }}</h5></a>                            
                                <div class="spirit-info">
                                    <span id="spiritLevel" class="badge bg-cyber">{{ 'spirit.level'|trans }}: 1</span>
                                </div>
                            </div>
                            <div class="col-6 text-center">
                                <div class="spirit-avatar-container">
                                    <div id="spiritChatAvatar" class="spirit-avatar">
                                        <div class="spirit-glow"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6>{{ 'spirit.chat.conversations'|trans }}</h6>
                            <button id="newConversationBtn" class="btn btn-sm btn-cyber">
                                <i class="mdi mdi-message-badge"></i><span class="ms-2 d-none d-md-inline">{{ 'spirit.chat.new_conversation'|trans }}</span>
                            </button>
                        </div>
                        <div id="conversationsList" class="list-group conversation-list">
                            <div class="text-center p-3">
                                <div class="spinner-border text-cyber" role="status">
                                    <span class="visually-hidden">{{ 'loading'|trans }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div id="chatContainer" class="chat-container d-none">
                    <div id="chatMessages" class="chat-messages mb-3">
                        <div class="text-center p-3 loading-indicator">
                            <div class="spinner-border text-cyber" role="status">
                                <span class="visually-hidden">{{ 'loading'|trans }}</span>
                            </div>
                        </div>
                    </div>
                    
                    {# <div class="chat-input">
                        <form id="chatForm" class="d-flex">
                            <input type="text" id="messageInput" class="form-control me-2" placeholder="{{ 'spirit.chat.type_message'|trans }}" autocomplete="off">
                            <button type="submit" class="btn btn-cyber">
                                <i class="mdi mdi-send"></i>
                            </button>
                        </form>
                    </div> #}
                </div>
            </div>
            <div class="modal-footer chat-container">
                <form id="chatForm" class="d-flex w-100 mb-5">
                    <textarea id="messageInput" class="form-control me-3 d-block" rows="2" placeholder="{{ 'spirit.chat.type_message'|trans }}" autocomplete="off"></textarea>
                    <button type="submit" class="btn btn-cyber" style="max-height: min-content !important;">
                        <i class="mdi mdi-message-check"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="newConversationModal" tabindex="-1" aria-labelledby="newConversationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass-panel">
            <div class="modal-header bg-cyber-g border-success">
                <h5 class="modal-title" id="newConversationModalLabel"><i class="mdi mdi-message-badge me-2"></i> {{ 'spirit.chat.new_conversation'|trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="newConversationForm">
                    <div class="mb-3">
                        <label for="conversationTitle" class="form-label">{{ 'spirit.chat.conversation_title'|trans }}</label>
                        <input type="text" class="form-control" id="conversationTitle" required>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal"><i class="mdi mdi-close me-2"></i>{{ 'Cancel'|trans }}</button>
                        <button type="submit" class="btn btn-cyber"><i class="mdi mdi-check me-2"></i>{{ 'Create'|trans }}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endif %}
