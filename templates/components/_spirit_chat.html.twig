{% if app.user %}
<div class="modal fade" id="spiritChatModal" tabindex="-1" aria-labelledby="spiritChatModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-fullscreen">
        <div class="modal-content glass-panel">
            <div class="modal-header bg-cyber-g border-success">
                <span id="spiritChatToolsAndConversationsToggle" class="btn_ btn-cyber btn-sm me-3 cursor-pointer fs-5"><i class="mdi mdi-menu"></i></span>
                <span id="spiritChatModalTitle" class="fs-4 me-2"></span>
                <span class="modal-title fs-6 d-none d-md-inline-block" id="spiritChatModalLabel">{{ 'spirit.chat.title'|trans }} <span class="spiritName"></span></span>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'ui.close'|trans }}"></button>
            </div>
            <div class="modal-body pt-0">
                <div id="spiritChatToolsAndConversations" class="d-none row position-fixed start-0 end-0 bg-dark glow-cyber p-4" style="z-index: 10;">
                    <div class="col-md-4 d-none d-md-block">
                        <div class="row mb-4">
                            <div class="col-4 text-end pt-2">
                                <a href="/spirit" title=""><h5 class="spiritName mt-2">{{ 'spirit.loading'|trans }}</h5></a>                            
                                <div class="spirit-info">
                                    <span id="spiritLevel" class="badge bg-cyber">{{ 'spirit.level'|trans }}: 1</span>
                                </div>
                            </div>
                            <div class="col-6 text-center">
                                <div class="spirit-avatar-container">
                                    <div id="spiritChatAvatar" class="spirit-avatar">
                                        <div class="spirit-glow"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6><i class="mdi mdi-forum-outline text-cyber me-2"></i>{{ 'spirit.chat.conversations'|trans }}</h6>
                            <div class="input-group w-50 mx-2">
                                <span class="input-group-text border-secondary border-opacity-50" style="background-color: transparent;"><i class="mdi mdi-magnify text-secondary"></i></span>
                                <input type="text" class="form-control" id="conversationSearch" placeholder="{{ 'spirit.chat.search_conversations'|trans }}">
                            </div>
                            <button id="newConversationBtn" class="btn _btn-sm btn-cyber">
                                <i class="mdi mdi-message-plus"></i><span class="ms-2 d-none _d-md-inline">{{ 'spirit.chat.new_conversation'|trans }}</span>
                            </button>
                        </div>
                        <div id="conversationsList" class="list-group conversation-list">
                            <div class="text-center p-3">
                                <div class="spinner-border text-cyber" role="status">
                                    <span class="visually-hidden">{{ 'auth.key_generation.loading'|trans }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div id="chatContainer" class="chat-container d-none">
                    <div id="chatMessages" class="chat-messages mb-3">
                        <div class="text-center p-3 loading-indicator">
                            <div class="spinner-border text-cyber" role="status">
                                <span class="visually-hidden">{{ 'auth.key_generation.loading'|trans }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer chat-container pb-4 border-secondary border-opacity-50">
                <form id="chatForm" class="d-flex flex-column w-100 m-0">
                    <div class="d-flex align-items-center gap-2">
                        <div class="d-flex flex-column gap-2">
                            <div id="creditIndicator"></div>
                            <i class="mdi mdi-tune-vertical text-cyber cursor-pointer" id="chatSettingsIcon" data-bs-toggle="collapse" data-bs-target="#chatSettings" aria-expanded="false" aria-controls="chatSettings"></i>
                        </div>
                        <textarea id="messageInput" class="form-control" rows="2" placeholder="{{ 'spirit.chat.type_message'|trans }}" autocomplete="off" focus></textarea>
                        <button type="submit" id="sendMessageBtn" class="btn btn-cyber" style="max-height: min-content !important;">
                            <i class="mdi mdi-message-check"></i>
                        </button>
                    </div>
                    <div class="d-flex align-items-center mt-2 ps-2">
                        <div class="form-range d-flex align-items-center gap-2 collapse" id="chatSettings">
                            <label class="form-range-label small" for="responseMaxOutputSlider">
                                {{ 'spirit.chat.response_max_output'|trans }}: 
                                <span id="responseMaxOutputValue" class="text-cyber d-inline-block text-end" style="width: 3.2em;">-</span> tokens
                            </label>
                            <input class="form-range-input" type="range" id="responseMaxOutputSlider" min="10" max="8192" value="500">
                        </div>  
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="newConversationModal" tabindex="-1" aria-labelledby="newConversationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass-panel">
            <div class="modal-header bg-cyber-g border-success">
                <h5 class="modal-title" id="newConversationModalLabel"><i class="mdi mdi-message-badge me-2"></i> {{ 'spirit.chat.new_conversation'|trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'ui.close'|trans }}"></button>
            </div>
            <div class="modal-body">
                <form id="newConversationForm">
                    <div class="mb-3 w-100">
                        <label for="conversationTitle" class="form-label">{{ 'spirit.chat.conversation_title'|trans }}</label>
                        <input type="text" class="form-control" id="conversationTitle" required focus>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal"><i class="mdi mdi-close me-2"></i>{{ 'ui.cancel'|trans }}</button>
                        <button type="submit" class="btn btn-cyber"><i class="mdi mdi-check me-2"></i>{{ 'ui.create'|trans }}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteConversationModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass-panel">
            <div class="modal-header bg-danger">
                <i class="mdi mdi-message-alert me-2"></i> <span class="modal-title text-white" id="deleteConversationModalLabel"></span>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'ui.close'|trans }}"></button>
            </div>
            <div class="modal-body">
                <form id="deleteConversationForm">
                    <div class="mb-3 w-100 py-2 text-center fs-5">
                        <span>{{ 'spirit.chat.delete_conversation_confirm'|trans }}</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal"><i class="mdi mdi-close me-2"></i>{{ 'ui.cancel'|trans }}</button>
                        <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete me-2"></i>{{ 'ui.delete'|trans }}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endif %}
