{% extends 'base.html.twig' %}

{% block title %}{{ 'settings.ai.page_title'|trans|default('AI Services Settings') }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <div class="card glass-panel mb-4">
                <div class="card-header bg-transparent border-success border-1 border-bottom p-3">
                    <h5 class="mb-0"><i class="mdi mdi-tune-vertical me-2"></i><a href="{{ path('app_user_settings') }}">{{ 'navigation.user_menu.settings'|trans }}</a></h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="{{ path('app_user_settings_ai') }}" class="list-group-item list-group-item-action link-light bg-cyber active border-0">
                        <i class="mdi mdi-robot me-2"></i> {{ 'settings.nav.ai_services'|trans|default('AI Services') }}
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="glass-panel">
                <div class="bg-cyber-g p-4 rounded-top border-success border-1 border-bottom">
                    <h4 class="mb-0"><i class="mdi mdi-robot me-3"></i>{{ 'settings.nav.ai_services'|trans|default('AI Services') }}</h4>
                </div>
                <div class="p-4">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'ui.close'|trans }}"></button>
                        </div>
                    {% endfor %}
                    
                    {# <p class="mb-0">{{ 'settings.ai.description'|trans|default('Configure your AI service settings to power your Spirit and other AI features.') }}</p>
 #}
                    <form method="post" action="{{ path('app_user_settings_ai') }}">                        
                        <div>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="mb-0"><i class="mdi mdi-robot me-3"></i>{{ 'settings.ai.models.title'|trans|default('AI Models') }}</h5>
                                <button type="button" class="btn btn-sm btn-outline-secondary" id="sync_models_btn" onclick="syncAiModels()">
                                    <i class="mdi mdi-refresh me-1"></i> {{ 'settings.ai.models.update'|trans|default('Update Models List') }}
                                </button>
                            </div>
                            <p class="">{{ 'settings.ai.models.description'|trans|default('Select which AI models to use for different purposes.') }}</p>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="primary_model" class="form-label"><i class="mdi mdi-brain me-2 text-cyber"></i>{{ 'settings.ai.models.primary'|trans|default('Primary AI Model') }}</label>
                                    <select class="form-select" id="primary_model" name="primary_model" onchange="let akuBtn = document.getElementById('save_ai_settings'); akuBtn.disabled = false;">
                                        {% for model in aiModels %}
                                            <option value="{{ model.id }}" {% if settings['ai.primary_ai_service_model_id'] is defined and settings['ai.primary_ai_service_model_id'] == model.id %}selected{% endif %}>
                                                {{ model.modelName }} [{{ model.contextWindow|number_format(0, '.', ' ') }}] ({{ model.ppmInput|number_format(0, '.', ' ') }} / {{ model.ppmOutput|number_format(0, '.', ' ') }})
                                            </option>
                                        {% endfor %}
                                    </select>
                                    <div class="form-text text-muted ms-2">{{ 'settings.ai.models.price_hint'|trans|default('model name [context window] (input price / output price) in Credits per million tokens') }}</div>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label for="secondary_model" class="form-label"><i class="mdi mdi-image-edit-outline me-2 text-cyber"></i>{{ 'settings.ai.models.secondary'|trans|default('Image gen/edit AI Model') }}</label>
                                    <select class="form-select" id="secondary_model" name="secondary_model" onchange="let akuBtn = document.getElementById('save_ai_settings'); akuBtn.disabled = false;">
                                        {% for model in aiImageModels %}
                                            <option value="{{ model.id }}" {% if settings['ai.secondary_ai_service_model_id'] is defined and settings['ai.secondary_ai_service_model_id'] == model.id %}selected{% endif %}>
                                                {{ model.modelName }} [{{ model.contextWindow|number_format(0, '.', ' ') }}] ({{ model.ppmInput|number_format(0, '.', ' ') }} / {{ model.ppmOutput|number_format(0, '.', ' ') }})
                                            </option>
                                        {% endfor %}
                                    </select>
                                    <div class="form-text text-muted ms-2">{{ 'settings.ai.models.price_hint'|trans|default('model name [context window] (input price / output price) in Credits per million tokens') }}</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-sm btn-cyber" id="save_ai_settings" disabled>
                                <i class="mdi mdi-content-save me-2"></i> {{ 'ui.save'|trans }} {{ 'navigation.user_menu.settings'|trans }} 
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- CQ AI Gateway Section - separate block below -->
            <div class="glass-panel mt-4">
                <div class="bg-cyber-g p-3 rounded-top border-success border-1 border-bottom">
                    <div class="mb-0 d-flex align-items-center justify-content-between">
                        <span>
                            <i class="mdi mdi-server-network me-2"></i>{{ 'settings.ai.gateway.title'|trans|default('CQ AI Gateway') }}
                        </span>
                        {% if api_key_state == 'set_and_valid' %}
                        <span class="d-flex align-items-center justify-content-end gap-2">
                            {# <i class="mdi fs-5 mdi-gauge{% if CQ_AI_GatewayCredits < 0 %}-empty text-danger{% elseif CQ_AI_GatewayCredits < 30 %}-low text-danger{% elseif CQ_AI_GatewayCredits < 60 %} text-warning{% elseif CQ_AI_GatewayCredits > 500 %}-full text-success{% else %} text-cyber{% endif %}"
                                title="{{ CQ_AI_GatewayCredits }} Credits"></i> #}
                            <span class="badge {% if CQ_AI_GatewayCredits < 30 %}bg-danger{% elseif CQ_AI_GatewayCredits < 60 %}bg-warning{% elseif CQ_AI_GatewayCredits > 500 %}bg-success{% else %}bg-dark bg-opacity-25{% endif %}">
                                <i class="mdi mdi-circle-multiple-outline text-cyber me-1"></i>{{ CQ_AI_GatewayCredits }}
                            </span>
                            {# <span class="small">{{ 'settings.ai.gateway.credits'|trans|default('Credits') }}</span> #}
                        </span>
                        {% endif %}
                    </div>
                </div>
                <div class="p-4 rounded-bottom">
                    <!-- API Key Status -->
                    <div class="d-flex align-items-center mb-3">
                        <span class="me-2">{{ 'settings.ai.gateway.api_key_label'|trans|default('API Key:') }}</span>
                        {% if api_key_state == 'not_set' %}
                            <span class="badge bg-danger" title="{{ 'settings.ai.gateway.api_key_not_set'|trans|default('Your API key is not set') }}">{{ 'settings.ai.gateway.not_set'|trans|default('Not Set') }} <i class="mdi mdi-close ms-1"></i></span>
                        {% elseif api_key_state == 'not_validated' %}
                            <span class="badge bg-warning" title="{{ 'settings.ai.gateway.api_key_not_validated'|trans|default('Your API key is not validated') }}">{{ 'settings.ai.gateway.not_validated'|trans|default('Not Validated') }} <i class="mdi mdi-help-circle ms-1"></i></span>
                        {% elseif api_key_state == 'not_valid' %}
                            <span class="badge bg-warning" title="{{ 'settings.ai.gateway.api_key_not_valid'|trans|default('Your API key is not valid') }}">{{ 'settings.ai.gateway.not_valid'|trans|default('Not Valid') }} <i class="mdi mdi-cancel ms-1"></i></span>
                        {% elseif api_key_state == 'set_and_valid' %}
                            <span class="badge bg-success" title="{{ 'settings.ai.gateway.api_key_valid'|trans|default('Your API key is set and valid') }}">{{ 'settings.ai.gateway.valid'|trans|default('Set and Valid') }} <i class="mdi mdi-check ms-1"></i></span>
                        {% endif %}
                        <button type="button" class="btn btn-sm btn-link text-muted ms-2 p-0" onclick="document.getElementById('api_key_update_form').classList.toggle('d-none');" title="{{ 'settings.ai.gateway.update_api_key'|trans|default('Update API Key') }}">
                            <i class="mdi mdi-pencil"></i>
                        </button>
                    </div>

                    <!-- API Key Update Form (hidden by default when valid) -->
                    <form method="post" action="{{ path('app_user_settings_ai') }}" id="api_key_update_form" class="mb-3 {% if api_key_state == 'set_and_valid' %}d-none{% endif %}">
                        <div class="input-group">
                            <input type="text" class="form-control" id="cq_ai_gateway_api_key" name="cq_ai_gateway_api_key" value="" 
                                placeholder="{{ 'settings.ai.gateway.api_key_placeholder'|trans|default('Enter your CQ AI Gateway API key') }}"
                                oninput="document.getElementById('update_api_key').disabled = this.value === '';">
                            <button type="submit" class="btn btn-cyber" id="update_api_key" disabled>
                                <i class="mdi mdi-key me-1"></i> {{ 'settings.ai.gateway.update_api_key'|trans|default('Update') }}
                            </button>
                        </div>
                    </form>

                    <!-- Action Buttons -->
                    {% if api_key_state == 'set_and_valid' %}
                    <div class="d-flex justify-content-between align-items-center">
                        <button type="button" onclick="openGatewayLogin('dashboard')" class="btn btn-sm btn-outline-secondary">
                            <i class="mdi mdi-login me-2"></i> CQ AI Gateway - Dashboard
                        </button>
                        <button type="button" onclick="openGatewayLogin('add-credits')" class="btn btn-sm btn-cyber">
                            <i class="mdi mdi-plus me-2"></i> {{ 'settings.ai.gateway.add_credits'|trans|default('Add Credits') }}
                        </button>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    /**
     * Open CQ AI Gateway with seamless login (no password required)
     * @param {string} redirect - Where to redirect after login: 'dashboard', 'add-credits', 'transactions'
     */
    function openGatewayLogin(redirect = 'dashboard') {
        // Show loading state on the clicked element
        const btn = event.target.closest('button, a');
        const originalContent = btn ? btn.innerHTML : null;
        if (btn) {
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>';
        }

        fetch('{{ path('app_user_settings_ai_gateway_login') }}', {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ redirect: redirect })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success && data.login_url) {
                // Open the login URL in a new window
                window.open(data.login_url, '_blank');
            } else {
                // Show error
                window.toast.error(data.message || '{{ 'settings.ai.gateway.login_error'|trans|default('Failed to connect to CQ AI Gateway') }}');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            window.toast.error('{{ 'settings.ai.gateway.login_error'|trans|default('Failed to connect to CQ AI Gateway') }}');
        })
        .finally(() => {
            // Restore button state
            if (btn && originalContent) {
                btn.disabled = false;
                btn.innerHTML = originalContent;
            }
        });
    }

    function syncAiModels() {
        const btn = document.getElementById('sync_models_btn');
        const originalText = btn.innerHTML;
        const originalClass = btn.className;
        
        // Disable button and show loading state
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span> {{ 'settings.ai.models.updating'|trans|default('Updating...') }}';
        
        fetch('{{ path('app_user_settings_ai_sync_models') }}', {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Show success checkmark briefly before reloading
                btn.innerHTML = '<i class="mdi mdi-check me-1"></i> {{ 'settings.ai.models.updated'|trans|default('Updated!') }}';
                btn.classList.remove('btn-outline-secondary');
                btn.classList.add('btn-success');
                
                setTimeout(() => {
                    window.location.reload();
                }, 500);
            } else {
                // Show error
                alert('{{ 'settings.ai.models.error'|trans|default('Error updating models:') }} ' + data.message);
                btn.disabled = false;
                btn.innerHTML = originalText;
                btn.className = originalClass;
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('{{ 'settings.ai.models.error_generic'|trans|default('An error occurred while updating models.') }}');
            btn.disabled = false;
            btn.innerHTML = originalText;
            btn.className = originalClass;
        });
    }
</script>
{% endblock %}
