{% extends 'base.html.twig' %}

{% block title %}{{ 'settings.page_title'|trans|default('User Settings') }}{% endblock %}

{% block body %}
<div data-translations="{{ {
        'email_updated': 'profile.email.updated.title'|trans,
        'email_error': 'profile.email.error'|trans,
        'password_updated': 'profile.password.updated.title'|trans,
        'password_error': 'profile.password.error'|trans,
        'connection_error': 'profile.error.connection'|trans,
        'database_optimized': 'settings.database.optimized'|trans({}, 'messages', app.request.locale)|default('Database optimized successfully'),
        'database_error': 'settings.database.error'|trans({}, 'messages', app.request.locale)|default('Failed to optimize database')
    }|json_encode|e('html_attr') }}">

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <div class="card glass-panel mb-4">
                <div class="card-header bg-transparent border-success border-1 border-bottom p-3">
                    <h5 class="mb-0"><i class="mdi mdi-tune-vertical me-2"></i><a href="{{ path('app_user_settings') }}">{{ 'navigation.user_menu.settings'|trans }}</a></h5>
                </div>
                <div class="list-group list-group-flush bg-transparent">
                    {# <a href="{{ path('app_user_settings_profile') }}" class="list-group-item list-group-item-action link-light bg-transparent border-0">
                        <i class="mdi mdi-account me-2"></i> {{ 'navigation.user_menu.profile'|trans }}
                    </a> #}
                    <a href="{{ path('app_user_settings_ai') }}" class="list-group-item list-group-item-action bg-transparent text-light border-0">
                        <i class="mdi mdi-robot me-2"></i> {{ 'settings.nav.ai_services'|trans|default('AI Services') }}
                    </a>
                    <a href="{{ path('app_user_settings_ai_gateways') }}" class="list-group-item list-group-item-action text-light bg-transparent border-0 ps-4 d-none">
                        <i class="mdi mdi-server-network me-2"></i> {{ 'settings.nav.ai_gateways'|trans|default('AI Gateways') }}
                    </a>
                    <a href="{{ path('app_user_settings_ai_models') }}" class="list-group-item list-group-item-action text-light bg-transparent border-0 ps-4 d-none">
                        <i class="mdi mdi-brain me-2"></i> {{ 'settings.nav.ai_models'|trans|default('AI Models') }}
                    </a>
                    <!-- Add more settings categories here as needed -->
                </div>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="glass-panel">
                <div class="bg-cyber-g p-4 rounded-top border-success border-1 border-bottom">
                    <h4 class="mb-0"><i class="mdi mdi-tune-variant me-3"></i>{{ 'settings.general.title'|trans|default('General Settings') }}</h4>
                </div>
                <div class="p-4">
                    <!-- User login information -->
                    <div class="row">
                        <div class="col-12 mb-3">
                            <h6><i class="mdi mdi-account-lock me-3"></i>{{ 'settings.general.login_info'|trans|default('Login information') }}</h6>
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <p class="mb-3">
                                <span>{{ 'profile.username'|trans }}</span><br>
                                <code>{{ user.username }}</code><br><br>
                                <button type="button" class="btn btn-sm btn-cyber float-end" data-bs-toggle="modal" data-bs-target="#passwordModal">
                                    <i class="mdi mdi-lock-alert me-2"></i>{{ 'profile.password.change'|trans }}
                                </button>
                                <div class="clearfix"></div>
                            </p>
                        </div>
                        <div class="col-12 col-md-6">
                            <p>
                                <span>{{ 'profile.email.label'|trans }}</span><br>
                                <code id="current-email">{{ user.email }}</code><br><br>
                                <button type="button" class="btn btn-sm btn-cyber float-end" data-bs-toggle="modal" data-bs-target="#emailModal">
                                    <i class="mdi mdi-email-edit me-2"></i>{{ 'profile.email.change'|trans }}
                                </button>
                                <div class="clearfix"></div>
                            </p>
                        </div>
                    </div>

                    <hr>

                    <!-- Theme Settings -->
                    <div class="row">
                        <div class="col-12 mb-3">
                            <h6><i class="mdi mdi-palette me-3"></i>{{ 'settings.theme.title'|trans({}, 'messages', app.request.locale)|default('Theme') }}</h6>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>{{ 'settings.theme.background'|trans({}, 'messages', app.request.locale)|default('Background Theme') }}</strong>
                                    <p class="text-muted small mb-0">{{ 'settings.theme.background_desc'|trans({}, 'messages', app.request.locale)|default('Change the background visual theme') }}</p>
                                </div>
                                <button id="theme-toggle" class="btn btn-cyber" title="{{ 'settings.theme.toggle'|trans({}, 'messages', app.request.locale)|default('Toggle theme') }}">
                                    <i class="mdi mdi-image me-2"></i>{{ 'settings.theme.change'|trans({}, 'messages', app.request.locale)|default('Change Theme') }}
                                </button>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <!-- Database Settings -->
                    <div class="row">
                        <div class="col-12 mb-3">
                            <h6><i class="mdi mdi-database me-3"></i>{{ 'settings.database.title'|trans({}, 'messages', app.request.locale)|default('Database') }}</h6>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>{{ 'settings.database.size'|trans({}, 'messages', app.request.locale)|default('Database Size') }}</strong>
                                    <p class="text-muted small mb-0">
                                        <span id="database-size">{{ 'ui.loading'|trans|default('Loading...') }}</span>
                                    </p>
                                </div>
                                <button id="database-optimize" class="btn btn-sm btn-cyber" title="{{ 'settings.database.optimize_title'|trans({}, 'messages', app.request.locale)|default('Optimize database to reclaim unused space') }}">
                                    <span class="spinner-border spinner-border-sm d-none me-2" role="status" aria-hidden="true"></span>
                                    <i class="mdi mdi-database-sync me-2"></i>{{ 'settings.database.optimize'|trans({}, 'messages', app.request.locale)|default('Optimize Database') }}
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Email Modal -->
<div class="modal fade" id="emailModal" tabindex="-1" aria-labelledby="emailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass-panel">
            <div class="modal-header bg-cyber-g border-success">
                <h5 class="modal-title" id="emailModalLabel"><i class="mdi mdi-email-edit me-2"></i>{{ 'profile.email.change'|trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'ui.close'|trans }}"></button>
            </div>
            <div class="modal-body">
                <form id="email-form" action="{{ path('app_user_settings_email') }}" method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">{{ 'profile.email.new'|trans }}</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">
                            <i class="mdi mdi-close me-2"></i>{{ 'ui.cancel'|trans }}
                        </button>
                        <button type="submit" class="btn btn-cyber">
                            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                            <i class="mdi mdi-content-save me-2"></i>{{ 'profile.email.update'|trans }}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Password Modal -->
<div class="modal fade" id="passwordModal" tabindex="-1" aria-labelledby="passwordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass-panel">
            <div class="modal-header bg-cyber-g border-success">
                <h5 class="modal-title" id="passwordModalLabel"><i class="mdi mdi-lock-alert me-2"></i>{{ 'profile.password.change'|trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'ui.close'|trans }}"></button>
            </div>
            <div class="modal-body">
                <form id="password-form" action="{{ path('app_user_settings_password') }}" method="post">
                    <div class="mb-3">
                        <label for="current_password" class="form-label">{{ 'profile.password.current'|trans }}</label>
                        <input type="password" class="form-control" id="current_password" name="current_password" required>
                    </div>
                    <div class="mb-3">
                        <label for="new_password" class="form-label">{{ 'profile.password.new'|trans }}</label>
                        <input type="password" class="form-control" id="new_password" name="new_password" required>
                    </div>
                    <div class="mb-3">
                        <label for="confirm_password" class="form-label">{{ 'profile.password.confirm'|trans }}</label>
                        <input type="password" class="form-control" id="confirm_password" name="confirm_password" required>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">
                            <i class="mdi mdi-close me-2"></i>{{ 'ui.cancel'|trans }}
                        </button>
                        <button type="submit" class="btn btn-cyber">
                            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                            <i class="mdi mdi-content-save me-2"></i>{{ 'profile.password.update'|trans }}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('settings-general') }}
{% endblock %}