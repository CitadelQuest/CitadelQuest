{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.system_backups.title'|trans }} - {{ parent() }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin-system-backups') }}
{% endblock %}

{% block body %}
<div id="systemBackupsContainer" 
     data-delete-url="{{ path('app_admin_system_backup_delete', {backupName: 'BACKUP_NAME'}) }}"
     data-trans-deleting="{{ 'ui.deleting'|trans }}"
     data-trans-delete="{{ 'admin.system_backups.delete'|trans }}"
     data-trans-delete-failed="{{ 'admin.system_backups.delete_failed'|trans }}">
</div>
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="text-cyber">
                    <i class="mdi mdi-backup-restore me-2"></i>
                    {{ 'admin.system_backups.title'|trans }}
                </h1>
                <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">
                    <i class="mdi mdi-arrow-left me-2"></i>
                    {{ 'ui.back'|trans }}
                </a>
            </div>
        </div>
    </div>

    <!-- Info Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card glass-panel border-cyber">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="mdi mdi-information-outline text-cyber me-3" style="font-size: 2rem;"></i>
                        <div>
                            <p class="mb-1">{{ 'admin.system_backups.description'|trans }}</p>
                            <small class="text-muted">
                                {{ 'admin.system_backups.total_backups'|trans }}: <strong>{{ backups|length }}</strong>
                                {% if totalSize > 0 %}
                                    &nbsp;|&nbsp;
                                    {{ 'admin.system_backups.total_size'|trans }}: <strong>{{ (totalSize / 1048576)|number_format(1) }} MB</strong>
                                {% endif %}
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Backups List -->
    <div class="row">
        <div class="col-12">
            <div class="card glass-panel border-cyber">
                <div class="card-header bg-cyber-g pt-3 border-0">
                    <h5 class="text-cyber mb-0">
                        <i class="mdi mdi-folder-zip me-2"></i>
                        {{ 'admin.system_backups.list_title'|trans }}
                    </h5>
                </div>
                <div class="card-body">
                    {% if backups|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-dark table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>{{ 'admin.system_backups.backup_name'|trans }}</th>
                                        <th>{{ 'admin.system_backups.created_at'|trans }}</th>
                                        <th>{{ 'admin.system_backups.size'|trans }}</th>
                                        <th class="text-end">{{ 'admin.system_backups.actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for backup in backups %}
                                        <tr id="backup-row-{{ loop.index }}">
                                            <td>
                                                <i class="mdi mdi-folder-zip-outline text-cyber me-2"></i>
                                                {{ backup.name }}
                                            </td>
                                            <td>
                                                {{ backup.timestamp|date('Y-m-d H:i:s') }}
                                            </td>
                                            <td>
                                                {{ (backup.size / 1048576)|number_format(1) }} MB
                                            </td>
                                            <td class="text-end">
                                                <button 
                                                    class="btn btn-sm btn-outline-danger delete-backup-btn"
                                                    data-backup-name="{{ backup.name }}"
                                                    data-row-id="backup-row-{{ loop.index }}"
                                                    title="{{ 'admin.system_backups.delete'|trans }}"
                                                >
                                                    <i class="mdi mdi-delete"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center text-muted py-5">
                            <i class="mdi mdi-folder-open-outline display-4 mb-3"></i>
                            <p class="mb-0">{{ 'admin.system_backups.no_backups'|trans }}</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteBackupModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content glass-panel">
            <div class="modal-header bg-danger text-white">
                <div class="modal-title" id="deleteBackupModalLabel">
                    {{ 'admin.system_backups.confirm_delete_title'|trans }}
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>{{ 'admin.system_backups.confirm_delete'|trans }}</p>
                <p class="text-danger fw-bold" id="deleteBackupName"></p>
            </div>
            <div class="modal-footer border-secondary justify-content-between">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    {{ 'ui.cancel'|trans }}
                </button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="mdi mdi-delete me-2"></i>
                    {{ 'admin.system_backups.delete'|trans }}
                </button>
            </div>
        </div>
    </div>
</div>

{% endblock %}
