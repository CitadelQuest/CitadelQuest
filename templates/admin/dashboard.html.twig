                                        <th>{{ 'admin.users.username'|trans }}</th>
                                        <th>{{ 'admin.users.email'|trans }}</th>
                                        <th>{{ 'admin.users.actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in users|slice(0, 5) %}
