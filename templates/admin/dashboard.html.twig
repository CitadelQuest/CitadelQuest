                                </a>
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="text-center text-muted py-4">
                            <i class="mdi mdi-account-off display-4 mb-3"></i>
                            <p>{{ 'admin.dashboard.no_users'|trans }}</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div> #}
</div>

<div id="updateModal" class="modal fade" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content glass-panel cyber-glow">
            <div class="modal-header bg-cyber-g">
                <h5 class="modal-title text-cyber" id="updateModalLabel">{{ 'admin.dashboard.check_updates'|trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'ui.close'|trans }}"></button>
            </div>
            <div class="modal-body border-secondary">
                {# <p>{{ 'admin.dashboard.check_updates_modal'|trans }}</p> #}
                <div id="updateModalContent">
                    <iframe id="updateModalIframe" src="" width="100%" frameborder="0" class="rounded border-0 d-none"></iframe>
                </div>
            </div>
            <div class="modal-footer border-0 d-block">
                <button type="button" class="btn btn-sm btn-secondary me-2 float-start" data-bs-dismiss="modal" id="updateModalClose">
                    <i class="mdi mdi-close me-2"></i>
                    {{ 'ui.close'|trans }}
                </button>

                {# Create backup #}
                <button type="button" class="btn btn-sm btn-cyber float-end mb-2" id="updateModalCheckUpdates_step_1" data-original-text="{{ 'admin.dashboard.update_step_1'|trans }}">                    
                    <i class="mdi mdi-database-check me-2"></i>
                    {{ 'admin.dashboard.update_step_1'|trans }}
                </button>

                {# Download update #}
                <button type="button" class="btn btn-sm btn-cyber float-end mb-2" id="updateModalCheckUpdates_step_2" data-original-text="{{ 'admin.dashboard.update_step_2'|trans }}">                    
                    <i class="mdi mdi-download me-2"></i>
                    {{ 'admin.dashboard.update_step_2'|trans }}
                </button>

                {# Install update #}
                <button type="button" class="btn btn-sm btn-cyber float-end mb-2" id="updateModalCheckUpdates_step_3" data-original-text="{{ 'admin.dashboard.update_step_3'|trans }}">                    
                    <i class="mdi mdi-cog me-2"></i>
                    {{ 'admin.dashboard.update_step_3'|trans }}
                </button>

                {# Refresh #}
                <button type="button" class="btn btn-sm btn-cyber float-end mb-2 d-none" id="updateModalCheckUpdates_step_4" data-original-text="{{ 'admin.dashboard.update_step_4'|trans }}"
                    onclick="window.location.reload()">                    
                    <i class="mdi mdi-refresh me-2"></i>
                    {{ 'admin.dashboard.update_step_4'|trans }}
                </button>
                <div style="clear: both;"></div>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript functionality moved to AdminDashboardManager.js -->
{% endblock %}
