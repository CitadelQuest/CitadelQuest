{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.login.title'|trans }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="feature-card fade-in">
                    <h1 class="text-center mb-4">{{ 'auth.login.title'|trans }}</h1>

                    <form method="post" id="login_form">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <div class="mb-3">
                            <i class="mdi mdi-account me-2 text-cyber"></i>
                            <label for="username" class="form-label">{{ 'auth.login.username'|trans }}</label>
                            <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                        </div>

                        <div class="mb-3">
                            <i class="mdi mdi-lock me-2 text-cyber"></i>
                            <label for="password" class="form-label">{{ 'auth.login.password'|trans }}</label>
                            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
                                <label class="form-check-label" for="remember_me">{{ 'auth.login.remember_me'|trans }}</label>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-cyber" type="submit">{{ 'auth.login.submit'|trans }}</button>
                        </div>

                        <div class="text-center mt-3">
                            <a href="{{ path('app_register') }}" class="text-light">{{ 'auth.login.no_account'|trans }} {{ 'auth.login.register_link'|trans }}</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
