{% extends 'base.html.twig' %}

{% block title %}{{ 'password_change.title'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card glass-panel border-cyber">
                <div class="card-header bg-cyber-g text-center py-4">
                    <i class="mdi mdi-lock-reset display-1 text-warning"></i>
                    <h3 class="text-cyber mt-3 mb-0">{{ 'password_change.title'|trans }}</h3>
                </div>
                <div class="card-body py-4">
                    <div class="alert alert-warning mb-4">
                        <i class="mdi mdi-alert me-2"></i>
                        {{ 'password_change.required_message'|trans }}
                    </div>

                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            <i class="mdi mdi-alert-circle me-2"></i>
                            {{ message }}
                        </div>
                    {% endfor %}

                    <form method="post" action="{{ path('app_change_password') }}">
                        <div class="mb-3">
                            <label for="new_password" class="form-label">
                                <i class="mdi mdi-lock me-1"></i>
                                {{ 'password_change.new_password'|trans }}
                            </label>
                            <input 
                                type="password" 
                                class="form-control" 
                                id="new_password" 
                                name="new_password" 
                                required
                                minlength="8"
                                autocomplete="new-password"
                            >
                        </div>

                        <div class="mb-4">
                            <label for="confirm_password" class="form-label">
                                <i class="mdi mdi-lock-check me-1"></i>
                                {{ 'password_change.confirm_password'|trans }}
                            </label>
                            <input 
                                type="password" 
                                class="form-control" 
                                id="confirm_password" 
                                name="confirm_password" 
                                required
                                minlength="8"
                                autocomplete="new-password"
                            >
                        </div>

                        <div class="alert alert-info mb-4">
                            <strong>{{ 'password_change.requirements.title'|trans }}</strong>
                            <ul class="mb-0 mt-2">
                                <li>{{ 'password_change.requirements.min_length'|trans }}</li>
                                <li>{{ 'password_change.requirements.uppercase'|trans }}</li>
                                <li>{{ 'password_change.requirements.lowercase'|trans }}</li>
                                <li>{{ 'password_change.requirements.number'|trans }}</li>
                                <li>{{ 'password_change.requirements.special'|trans }}</li>
                            </ul>
                        </div>

                        <button type="submit" class="btn btn-cyber w-100">
                            <i class="mdi mdi-check me-2"></i>
                            {{ 'password_change.submit'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
